<!DOCTYPE html>
<html>
  <head>
  <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">    
    <meta name="description" content="Pivotal Story Summaries">
    <title>Pivotal Summary Viewer</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/rubbernecker.css">

  </head>
  <body>
    <div class="container-fluid" role="main">
      <div class="page-header">
        <h1>Current Stories</h1>
      </div>
    <div class="row">
    <% deliveredStory.forEach(function(story){ %>
      <%- include('story/summary', {story: story, status: "delivered", message: "In Approving"}); %>
      <% }); %>
    </div>
    <div class="row">
    <% if (approveSlotsFull) { %>
    <p class="text-warning lead">
      <img src="/images/sad_panda.gif" alt="Sad Panda" class="img-circle">&nbsp;I Am a sad panda. I will never find any slots for acceptance.
    </p>
    <% } %>    
    <% finishedStory.forEach(function(story){ %>
      <%- include('story/summary', {story: story, status: "finished", message: "In Review"}); %>
      <% }); %>
    </div>    
    <div class="row">
    <% if (reviewSlotsFull) { %>
    <p class="text-warning lead">
      <img src="/images/sad_panda.gif" alt="Sad Panda" class="img-circle">&nbsp;I Am a sad panda.  I will never find any slots for review.
    </p>
    <% } %>    
    <% story.forEach(function(story){ %>
      <%- include('story/summary', {story: story, status: "started", message: "In Progress"}); %>
      <% }); %>
    </div>

  
    <footer class="footer">
        <p>
            <a href="https://www.pivotaltracker.com/n/projects/<%= projectId %>" target="_blank">Full Fat Pivotal Buzz</a>. All the javascripts all of the time.
        </p>
    </footer>
    </div><!-- /container -->
  </body>
</html>
