<!DOCTYPE html>
<html>
  <head>
  <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="Pivotal Story Summaries">
    <title>Pivotal Summary Viewer</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/rubbernecker.css">

  </head>
  <body>
    <div class="container theme-showcase" role="main">
      <div class="page-header">
        <h1>Stories in Play</h1>
      </div>
    <div class="row">
    <% deliveredStory.forEach(function(story){ %>
      <%- include('story/summary', {story: story, status: "delivered", message: "In Approving"}); %>
      <% }); %>
    </div>
    <div class="row">
    <% finishedStory.forEach(function(story){ %>
      <%- include('story/summary', {story: story, status: "finished", message: "In Review"}); %>
      <% }); %>
    </div>    
    <div class="row">
    <% story.forEach(function(story){ %>
      <%- include('story/summary', {story: story, status: "started", message: "In Progress"}); %>
      <% }); %>
    </div>

  
      <div class="footer">
          <p>
              <a href="https://www.pivotaltracker.com/n/projects/<%= projectId %>" target="_blank">Full Fat Pivotal Buzz</a>. All the javascripts all of the time.
          </p>
      </div>      
    </div><!-- /container -->
  </body>
</html>
